# MLOps Environment Configuration (Example)
# Copy this file to .env and adjust values as needed

# Prefect Configuration
PREFECT_API_URL=http://127.0.0.1:4200/api
PREFECT_SERVER_HOST=127.0.0.1
PREFECT_SERVER_PORT=4200
PREFECT_WORK_POOL=mlops-pool

# MLflow Configuration
MLFLOW_TRACKING_URI=http://127.0.0.1:5000
MLFLOW_SERVER_HOST=127.0.0.1
MLFLOW_SERVER_PORT=5000

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000

# Model Configuration
MODEL_PATH=models/model.pkl
TRAINING_DATA_PATH=data/real_data/premier_league_matches.parquet
BACKUP_DIR=models/backups

# Simulation Configuration
SIMULATION_SPEED=5  # seconds between weeks in demo mode
RETRAINING_THRESHOLD=0.05
RETRAINING_FREQUENCY=5  # weeks

# Database Configuration (if needed for future)
# DATABASE_URL=sqlite:///mlops.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/mlops.log
